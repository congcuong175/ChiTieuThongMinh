<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AddChiTieuFragment">

    <!-- TODO: Update blank fragment layout -->
   <LinearLayout android:layout_height="match_parent"
       android:weightSum="8"
       android:orientation="vertical"
       android:layout_width="match_parent">
        <LinearLayout
            android:background="#15B4FB"
            android:layout_weight="7"
            android:weightSum="5"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_weight="4"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.cardview.widget.CardView
                    android:layout_margin="10dp"
                    app:cardCornerRadius="100dp"
                    app:cardBackgroundColor="#15B4FB"
                    android:layout_width="50dp"
                    android:layout_height="50dp">
                    <ImageView
                        android:id="@+id/imv_icon_add"
                        android:layout_gravity="center"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/icon"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout

                android:layout_weight="1"
                android:layout_width="match_parent"
                android:weightSum="10"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/edt_nhaptien"

                        android:background="@null"
                        android:inputType="number"
                        android:gravity="right"
                        android:textSize="30dp"
                        android:hint="0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="9"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <TextView
                        android:paddingTop="5dp"
                        android:textSize="25dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="đ"
                        android:textColor="@color/white"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
       <LinearLayout
           android:layout_weight="1"
           android:layout_width="match_parent"
           android:orientation="vertical"
           android:layout_height="match_parent">
           <androidx.cardview.widget.CardView
               android:layout_margin="20dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <LinearLayout
                   android:orientation="vertical"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">
                   <LinearLayout
                       android:id="@+id/date_picker_dialog"
                       android:layout_width="match_parent"
                       android:paddingTop="10dp"
                       android:paddingBottom="10dp"
                       android:layout_height="wrap_content">
                       <androidx.cardview.widget.CardView
                           android:layout_marginLeft="20dp"
                           android:layout_width="wrap_content"
                           android:layout_gravity="center"
                           android:layout_height="wrap_content">
                           <ImageView

                               android:background="@drawable/ic_timetable"
                               android:layout_width="35dp"
                               android:layout_height="35dp"/>
                       </androidx.cardview.widget.CardView>
                       <TextView
                           android:gravity="center_vertical"
                           android:layout_weight="1"
                           android:layout_marginLeft="20dp"
                           android:text="Ngày tháng"
                           android:textColor="@color/black"
                           android:textSize="17dp"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"/>
                       <LinearLayout
                           android:layout_weight="1"
                           android:gravity="left"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent">
                           <TextView
                               android:id="@+id/tv_ngaythang"
                               android:textStyle="bold"
                               android:paddingRight="20dp"
                               android:gravity="center_vertical"
                               android:text="50000"
                               android:textColor="@color/black"
                               android:textSize="20dp"
                               android:layout_width="wrap_content"
                               android:layout_height="match_parent"/>
                       </LinearLayout>

                   </LinearLayout>
                   <View
                       android:layout_width="match_parent"
                       android:layout_height="0.5dp"
                       android:background="#C8E3E3E3"
                       android:layout_marginLeft="20dp"
                       android:layout_marginRight="20dp"/>

                   <LinearLayout
                       android:id="@+id/time_picker_dialog"
                       android:layout_width="match_parent"
                       android:paddingTop="10dp"
                       android:paddingBottom="10dp"
                       android:layout_height="wrap_content">

                       <ImageView
                           android:layout_marginLeft="20dp"
                           android:layout_gravity="center"
                           android:padding="10dp"
                           android:background="@drawable/ic_workflow__1_"
                           android:layout_width="35dp"
                           android:layout_height="35dp"/>

                       <TextView
                           android:gravity="center_vertical"
                           android:layout_weight="1"
                           android:layout_marginLeft="20dp"
                           android:text="Thời gian"
                           android:textColor="@color/black"
                           android:textSize="17dp"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"/>
                       <LinearLayout
                           android:layout_weight="1"
                           android:gravity="left"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent">
                           <TextView
                               android:id="@+id/tv_gio"
                               android:paddingRight="20dp"
                               android:gravity="center_vertical"
                               android:text="02:46:34"
                               android:textColor="@color/black"
                               android:textSize="17dp"
                               android:layout_width="wrap_content"
                               android:layout_height="match_parent"/>
                       </LinearLayout>

                   </LinearLayout>
                   <View
                       android:layout_width="match_parent"
                       android:layout_height="0.5dp"
                       android:background="#C8E3E3E3"
                       android:layout_marginLeft="20dp"
                       android:layout_marginRight="20dp"/>

                   <View
                       android:layout_width="match_parent"
                       android:layout_height="0.5dp"
                       android:background="#C8E3E3E3"
                       android:layout_marginLeft="20dp"
                       android:layout_marginRight="20dp"/>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:paddingTop="10dp"
                       android:paddingBottom="10dp"
                       android:layout_height="wrap_content">
                       <ImageView
                           android:layout_marginLeft="20dp"
                           android:layout_gravity="center"
                           android:padding="10dp"
                           android:background="@drawable/ic_pencil"
                           android:layout_width="35dp"
                           android:layout_height="35dp"/>
                       <TextView
                           android:gravity="center_vertical"
                           android:layout_weight="1"
                           android:layout_marginLeft="20dp"
                           android:text="Ghi Chú"
                           android:textColor="@color/black"
                           android:textSize="17dp"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"/>
                       <LinearLayout
                           android:layout_weight="1"
                           android:gravity="left"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent">
                           <EditText
                               android:id="@+id/tv_ghichu"
                               android:background="@null"
                               android:paddingRight="20dp"
                               android:gravity="center_vertical"
                               android:hint="Nhập ghi chú"
                               android:textColor="@color/black"
                               android:textSize="17dp"
                               android:layout_width="wrap_content"
                               android:layout_height="match_parent"/>
                       </LinearLayout>

                   </LinearLayout>
                   <View
                       android:layout_width="match_parent"
                       android:layout_height="0.5dp"
                       android:background="#C8E3E3E3"
                       android:layout_marginLeft="20dp"
                       android:layout_marginRight="20dp"/>
               </LinearLayout>
           </androidx.cardview.widget.CardView>
           <LinearLayout
               android:layout_marginTop="10dp"
               android:gravity="center"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <androidx.appcompat.widget.AppCompatButton
                   android:id="@+id/btn_hoantat_add_chitieuorthunhap"
                   android:drawablePadding="10dp"
                   android:drawableStart="@drawable/ic_pen"
                   android:padding="15dp"
                   android:background="@drawable/bobutton"
                   android:textColor="@color/white"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Hoàn Tất"/>
           </LinearLayout>
       </LinearLayout>

   </LinearLayout>

</FrameLayout>